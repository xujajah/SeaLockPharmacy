<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="root" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.TabPopularMedicineController">
   <top>
      <VBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <Label text="Popular Medicine">
               <font>
                  <Font name="Times New Roman" size="24.0" />
               </font>
            </Label>
         </children>
         <BorderPane.margin>
            <Insets bottom="65.0" />
         </BorderPane.margin>
      </VBox>
   </top>
   <center>
      <TableView fx:id="tabPM" BorderPane.alignment="CENTER">
         <columns>
            <TableColumn fx:id="colID" prefWidth="75.0" text="Product ID" />
            <TableColumn fx:id="colProductName" prefWidth="75.0" text="Product Name" />
            <TableColumn fx:id="colMedicalName" prefWidth="75.0" text="Medical Name" />
            <TableColumn fx:id="colManufacturer" prefWidth="75.0" text="Manufacturer" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
         <BorderPane.margin>
            <Insets bottom="30.0" left="30.0" right="30.0" />
         </BorderPane.margin>
      </TableView>
   </center>
</BorderPane>
