<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXDatePicker?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="rootDailyReport" prefWidth="900.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.TabWeeklyMonthlyReportController">
   <top>
      <VBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <Label contentDisplay="CENTER" text="Weekly/Monthly Report">
               <font>
                  <Font name="Times New Roman" size="24.0" />
               </font>
            </Label>
            <HBox alignment="CENTER">
               <children>
                  <Label prefHeight="25.0" prefWidth="50.0" text="From:" />
                  <JFXDatePicker fx:id="dateFrom" defaultColor="#64b5f6" promptText="Date">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </JFXDatePicker>
                  <Label prefHeight="25.0" prefWidth="30.0" text="To:">
                     <HBox.margin>
                        <Insets left="30.0" />
                     </HBox.margin>
                  </Label>
                  <JFXDatePicker fx:id="dateTo" defaultColor="#64b5f6" promptText="Date">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </JFXDatePicker>
               </children>
               <VBox.margin>
                  <Insets bottom="5.0" top="40.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </top>
   <center>
      <TableView fx:id="tabWMR" BorderPane.alignment="CENTER">
         <columns>
            <TableColumn fx:id="colSerial" maxWidth="50.0" minWidth="50.0" prefWidth="50.0" text="S.No" />
            <TableColumn fx:id="colDate" maxWidth="3000.0" prefWidth="75.0" text="Date" />
            <TableColumn fx:id="colTotalAmount" maxWidth="2000.0" minWidth="60.0" prefWidth="100.0" text="Total Amount" />
            <TableColumn fx:id="colProfit" maxWidth="2000.0" minWidth="80.0" prefWidth="100.0" text="Profit" />
         </columns>
         <BorderPane.margin>
            <Insets bottom="30.0" left="30.0" right="30.0" />
         </BorderPane.margin>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
   <bottom>
      <HBox alignment="TOP_CENTER" prefHeight="50.0" spacing="30.0" BorderPane.alignment="TOP_CENTER">
         <children>
            <Label text="Total Sale : ">
               <HBox.margin>
                  <Insets left="-50.0" />
               </HBox.margin>
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Label fx:id="lblTotalSale" text="Label">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Label text="Total Profit :">
               <HBox.margin>
                  <Insets left="50.0" />
               </HBox.margin>
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Label fx:id="lblTotalProfit" text="Label">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </bottom>
</BorderPane>
